                        <a class="btn btn-sm btn-outline-light disabled" href="">Blog</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Blog Start -->
    <div class="container-fluid py-5">
        <div class="container">
            <div class="row align-items-end mb-4">
                <div class="col-lg-6">
                    <h6 class="text-secondary font-weight-semi-bold text-uppercase mb-3">Latest Testimonial || Announcements</h6>
                    <h1 class="section-title mb-3">Latest Testimonial || Announcements</h1>
                </div>
                <div class="col-lg-6">
                    <h4 class="font-weight-normal text-muted mb-3">God has so faithful to us so much that we record Testimonies daily in our ministry. and also, you can know more about our new Announcements here</h4>
                </div>
            </div>
           
                         
            <div class="row">
                <% data.forEach(blog=> { %>
                <div class="col-lg-4 col-md-6 mb-5">
                    <div class="position-relative mb-4">
                        <img class="img-fluid rounded w-100" src="<%= blog.picture  %> " alt="">
                        <div class="blog-date">
                            <h4 class="font-weight-bold mb-n0"></h4>
                            <small class="font-weight-bold text-uppercase"><%= blog.date %></small>
                        </div>
                    </div>
                    <div class="d-flex mb-2">
                        <a class="text-secondary text-uppercase font-weight-medium" href=""><%= blog.fullname %></a>
                        <span class="text-primary px-2">|</span>
                        <a class="text-secondary text-uppercase font-weight-medium" href=""><%= blog.topic %></a>
                    </div>
                    <h5 class="font-weight-medium mb-2"></h5>
                    <p class="mb-4"><%= blog.topic %></p>
                    <a class="btn btn-sm btn-primary py-2" href="/blog-detail">Read More</a>
                </div>
                <% }) %>
